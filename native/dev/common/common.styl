default_font_size = 12pt
default_bg_color = #FFF
default_font_color = #000

inputs_border_color = #A9A9A9
input_button_height = 28px
input_button_padding = 5px

default_color = #9E9E9E
danger_color = #F44336
success_color = #4CAF50
info_color = #2196F3

modal_all_screen(bg_color){
	position: absolute
	left: 0px
	top: 0px
	width: 100%
	height: 100%
	background-color: bg_color	
}

html
	font-size: default_font_size
	line-height: default_font_size
	padding: 0px
	margin: 0px
	*
		box-sizing: border-box
		color: default_font_color
		font-size: default_font_size
		line-height: default_font_size

body
	@extend html	
	
button	
	border: none
	box-shadow: none
	height: input_button_height
	padding: input_button_padding
	text-align: center
	cursor: pointer
	background-color: default_color
	color: #FFF
	~/:focus
		outline: none
	~/:active
		position: relative
		top: 1px
		left: -1px
	~/:hover
		background-color: default_color - 10%
		transition: background-color 300ms ease-in-out
	~/.success
		background-color: success_color
	~/.success:hover
		background-color: success_color - 10%
	~/.info
		background-color: info_color
	~/.info:hover
		background-color: info_color - 10%

input
	width: 100%
	padding: input_button_padding
	font-size: 11pt
	line-height: 11pt
	border: 1px solid inputs_border_color
	height: input_button_height
	~/:focus
		outline: none !important

.wrapper
	modal_all_screen(default_bg_color)

.hidden
	display: none

.test-table
	padding: 20px
	
.test-table__table
	width: 100%
	td
		padding: 10px
	.test-table_td-center
		text-align: center

.test-table__top-buttons
	margin-bottom: 5px

.test-table__add-button
	width: 200px

.test-form__background
	modal_all_screen(#000)
	opacity: 0.6
	cursor: pointer
	
.test-form__body
	position: absolute
	width: 300px
	left: 50%
	top: 100px
	margin-left: -150px
	background-color: default_bg_color
	padding: 20px

.test-form__input
	margin-bottom: 5px	

.test-form__label
	margin-bottom: 2px
	
.test-form__button	
	float: right
	margin-left: 5px